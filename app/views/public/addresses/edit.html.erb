<div class="container">
  <div class="row pl-4 mt-4">
    <span class="border px-3" style="background-color: #f5f5f5;"><strong>配送先編集</strong></span>
  </div>

  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
  <div class="row mt-4">
    <label for="postal_code" class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-5">
      <%= f.text_field :postal_code, class:"form-control", autofocus: true, id:"postal_code" %>
    </div>
  </div>

  <div class="row mt-3">
    <label for="address" class="col-sm-3 col-form-label">住所</label>
    <div class="col-sm-7">
      <%= f.text_field :address, class:"form-control", id:"address" %>
    </div>
  </div>

  <div class="row mt-3">
    <label for="name" class="col-sm-3 col-form-label">宛名</label>
    <div class="col-sm-4">
      <%= f.text_field :name, class:"form-control", id:"name" %>
    </div>
    <div class="col-sm-3 ml-5">
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
</div>