<div class="container">
  <div class="row mt-5">
    <div class="col-sm-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-4">
      <%= image_tag @item.get_image(200, 300) %>
    </div>

    <div class="col-sm-5 d-flex flex-column">
      <div class="item_name">
        <h4>
          <strong><%= @item.name %></strong>
        </h4>
      </div>
      <div class="item_introduction">
        <p><%= @item.introduction %></p>
      </div>
      <div class="item_price">
        ¥<%= @item.with_tax_price %> (税込)
      </div>
    </div>
  </div>

</div>