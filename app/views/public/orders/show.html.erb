<div class="container">
  <div class="row mt-4 pl-4">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;">注文履歴詳細</span>
    </h4>
  </div>

  <div class="row mt-4">
    <div class="col-sm-6">
      <h5><strong>注文情報</strong></h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <th><%= @order.created_at.strftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th>配送先</th>
            <th>
              <p><%= @order.postal_code %></p>
              <p><%= @order.address %></p>
              <p><%= @order.name %></p>
            </th>
          </tr>
          <tr>
            <th>支払方法</th>
            <th><%= @order.payment_method_i18n %></th>
          </tr>
          <tr>
            <th>ステータス</th>
            <th>
              <%  if @order.status = 0 %>
                <p>入金待ち</p>
              <% elsif @order.status = 1 %>
                <p>入金確認</p>
              <% elsif @order.status = 2 %>
                <p>製作中</p>
              <% elsif @order.status = 3 %>
                <p>発送準備中</p>
              <% else %>
                <p>発送済み</p>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-sm-5">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <th><%= @order.total_payment - @order.shipping_cost %></th>
          </tr>
          <tr>
            <th>配送料</th>
            <th><%= @order.shipping_cost %></th>
          </tr>
          <tr>
            <th>ご請求額</th>
            <th><%= @order.total_payment %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-7">
      <h5><strong>注文内容</strong></h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.item.with_tax_price * order_detail.amount %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>