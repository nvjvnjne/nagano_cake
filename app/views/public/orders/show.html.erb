<div class="container">
  <div class="row mt-4 pl-4">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;">注文履歴詳細</span>
    </h4>
  </div>

  <div class="row mt-4">
    <div class="col-sm-6">
      <h5><strong>注文情報</strong></h5>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <th><%= @order.created_at.striftime('%Y/%m/%d') %></th>
          </tr>
          <tr>
            <th>配送先</th>
            <th>
              <p><%= @order.postal_code %></p>
              <p><%= @order.address %></p>
              <p><%= @order.name %></p>
            </th>
          </tr>
          <tr>
            <th>支払方法</th>
            <th><%= @order.payment_method_i18n %></th>
          </tr>
          <tr>
            <th>ステータス</th>
            <th><%= @order.status %></th>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-sm-5">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <th><%= @sum %></th>
          </tr>
          <tr>
            <th>配送料</th>
            <th><%= @order.shipping_cost %></th>
          </tr>
          <tr>
            <th>ご請求額</th>
            <th><%= @order.shipping_cost + @sum %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-sm-7">
      <h5><strong>注文内容</strong></h5>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal %></td>
            <% @sum += cart_item.subtotal %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>