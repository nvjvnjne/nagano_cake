<div class="container">
  <div class="row mt-3 pl-4">
    <div class="col-sm-4">
      <h4>
        <span class="border px-3" style="background-color: #f5f5f5;">商品一覧</span>
      </h4>
    </div>
    <div class="col-sm-6">
    </div>
    <div class="col-sm-2">
      <%= link_to new_admin_item_path do %>
        <i class="fas fa-plus-circle fa-2x"></i>
      <% end %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-sm-12">
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.name %></td>
            <td>
            <% if item.is_active %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-secondary">販売停止中</p>
            <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>