<div class="container">
  <div class="row mt-5">
    <div class="col-sm-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-sm-9">
      <h4><strong>商品一覧</strong></h4>
      <div class="item-group d-flex flex-row flex-wrap mt-3">
        <% @items.each do |item| %>
        <div class="item-box d-flex flex-column">
          <div class="item-image">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item.get_image(150, 200) %>
            <% end %>
          </div>
          <div class="item-name">
            <%= link_to item_path(item.id) do %>
              <%= item.name %>
            <% end %>
          </div>
          <div class="item-price">
            ¥<%= item.price %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>