<div class="container">
  <div class="row mt-4 d-flex justify-content-center">
    <div class="col-sm-3">
      <h4>
      <span class="border px-3" style="background-color: #f5f5f5;"><strong>マイページ</strong></span>
      </h4>
    </div>
    <div class="col-sm-7">
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-sm-2">
      <h4>登録情報</h4>
    </div>
    <div class="col-sm-2">
      <%= link_to "編集する", customers_edit_path, class: 'btn btn-success px-4' %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">氏名</th>
            <th><%= current_customer.last_name %>  <%= current_customer.first_name %></th>
          </tr>
          <tr>
            <th class="table-active">カナ</th>
            <th><%= current_customer.last_name_kana %>  <%= current_customer.first_name_kana %></th>
          </tr>
          <tr>
            <th class="table-active">郵便番号</th>
            <th><%= current_customer.postal_code %></th>
          </tr>
          <tr>
            <th class="table-active">住所</th>
            <th><%= current_customer.address %></th>
          </tr>
          <tr>
            <th class="table-active">電話番号</th>
            <th><%= current_customer.telephone_number %></th>
          </tr>
          <tr>
            <th class="table-active">メールアドレス</th>
            <th><%= current_customer.email %></th>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-sm-2">
      <h5>
        <strong>配送先</strong>
      </h5>
    </div>
    <div class="col-sm-2 mr-5">
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary px-4" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-sm-2">
      <h5>
        <strong>注文履歴</strong>
      </h5>
    </div>
  </div>
</div>