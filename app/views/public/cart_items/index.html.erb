<div class="container">
  <div class="row mt-4 pl-3">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;">ショッピングカート</span>
    </h4>
  </div>

  <div class="row mt-3 pl-3">
    <div class="col-sm-12">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="2">商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.get_image %></td>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.price %></td>
            <td>
              <%= form_with model: @cart_item, url: cart_item_path, method: :patch do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td><% cart_item.item.with_tax_price %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), "data-confirm" => "削除しますか？", class:"btn btn-danger" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>