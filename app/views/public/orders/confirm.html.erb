<div class-"container">
    <div class="row mt-4">
      <h4>
        <span class="border px-3" style="background-color: #f5f5f5;">注文情報確認</span>
      </h4>
    </div>

    <div class="row">
      <div class="col-sm-5">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <%= image_tag cart_item.item.get_image(100, 100) %>
                <%= cart_item.item.name %>
              </td>
              <td><%= cart_item.item.with_tax_price %></td>
              <td><%= cart_item.amount %></td>
              <td><%= cart_item.subtotal %></td>
              <% @sum += cart_item.subtotal %>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-3">
        <table class="table table-bordered ml-3">
          <tbody>
            <tr>
              <th>送料</th>
              <th><%= @order.shipping_cost %></th>
            </tr>
            <tr>
              <th>商品合計</th>
              <th><%= @sum %></th>
            </tr>
            <tr>
              <th>請求金額</th>
              <th><%= @order.total_payment %></th>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-sm-2">
        <h4><strong>支払方法</strong></h4>
      </div>
      <div class="col-sm-3">
        <%= @order.payment_method %>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-sm-2">
        <h4><strong>お届け先</strong></h4>
      </div>
      <div class="col-sm-6">
        <%= @order.address %>
      </div>
    </div>
</div>