<div class="container">
  <div class="row pl-3 mb-5">
    <span class="border px-3 mt-3" style="background-color: #f5f5f5;"><strong>新規会員登録</strong></span>
  </div>

  <%= form_with model: @customer, url: customer_registration_path do |f| %>

  <%= render "public/shared/error_messages", resource: resource %>

  <div class="row mb-3 g-3">
    <label for="name" class="col-sm-2 col-form-label">名前</label>
    <div class="col-sm-5">
      <%= f.text_field :last_name, autofocus: true, placeholder:"令和", class:"form-control", id:"name" %>
    </div>
    <div class="col-sm-5">
    <%= f.text_field :first_name, placeholder:"道子", class:"form-control", id:"name" %>
    </div>
  </div>

  <div class="row mb-3 g-3">
    <label for="name_kana" class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col-sm-5">
      <%= f.text_field :last_name_kana, placeholder:"レイワ", class:"form-control", id:"name_kana" %>
    </div>
    <div class="col-sm-5">
      <%= f.text_field :first_name_kana, placeholder:"ミチコ", class:"form-control", id:"name_kana" %>
    </div>
  </div>

  <div class="row mb-3">
    <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-5">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@sample.com", class:"form-control", id:"email" %>
    </div>
  </div>

  <div class="row mb-2">
    <label for="postal_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-5">
      <%= f.text_field :postal_code, placeholder:"0000000", class:"form-control", id:"postal_code" %>
    </div>
  </div>

  <div class="row mb-3">
    <label for="address" class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-5">
      <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0", class:"form-control", id:"address" %>
    </div>
  </div>

  <div class="row mb-2">
    <label for="telephone_number" class="col-sm-2 col-form-label">電話番号(ハイフンなし)</label>
    <div class="col-sm-5">
      <%= f.text_field :telephone_number, placeholder:"0000000000", class:"form-control", id:"telephone_number" %>
    </div>
  </div>

  <div class="row mb-2">
    <label for="password" class="col-sm-2 col-form-label">パスワード(6文字以上)</label>
    <div class="col-sm-5">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"password" %>
    </div>
  </div>
  <div class="row mb-3">
    <label for="password_confirmation" class="col-sm-2 col-form-label">パスワード(確認用)</label>
    <div class="col-sm-5">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"password_confirmation" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-4">
      <%= f.submit "新規登録", class:"btn btn-success form-control" %>
    </div>
  </div>
  <% end %>

  <div class="row mt-4">
    <span class="border mt-4 ml-4" style="background-color: #f5f5f5;"><strong>既に登録済みの方</strong></span>
  </div>

  <div class="row d-flex justify-content-center">
    <div class="col-md-10 mt-3">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>

</div>
