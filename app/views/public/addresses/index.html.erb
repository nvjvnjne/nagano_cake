<div class="container">
  <div class="row mt-4 pl-4">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;">配送先登録/一覧</span>
    </h4>
  </div>

  <%= form_with model: Address.new, url: addresses_path, method: :post do |f| %>
  <div class="row mt-4">
    <label for="postal_code" class="col-sm-3 col-form-label">郵便番号(ハイフンなし)</label>
    <div class="col-sm-4">
      <%= f.text_field :postal_code, class:"form-control", placeholder:"0000000", id:"postal_code" %>
    </div>
  </div>
  <div class="row mt-3">
    <label for="address" class="col-sm-3 col-form-label">住所</label>
    <div class="col-sm-7">
      <%= f.text_field :address, class:"form-control", placeholder:"東京都渋谷区代々木神園町0-0", id:"address" %>
    </div>
  </div>
  <div class="row mt-3">
    <label for="name" class="col-sm-3 col-form-control">宛名</label>
    <div class="col-sm-4 mr-5">
      <%= f.text_field :name, class:"form-control", placeholder:"令和道子", id:"name" %>
    </div>
    <div class="col-sm-3 ml-5">
      <%= f.submit "新規登録", class:"btn btn-success px-4" %>
    </div>
  </div>
  <% end %>

  <div class="row mt-4">
    <div class="col-sm-7">
      <table class="table table-bordered border-dark">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="2"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.postal_code %></td>
            <td><%= address.address %></td>
            <td><%= address.name %></td>
            <td colspan="2"><%= link_to "編集する", edit_address_path(@address.id), class:"btn btn-sm btn-success" %><%= link_to "削除する", address_path, method: :delete, class:"btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>