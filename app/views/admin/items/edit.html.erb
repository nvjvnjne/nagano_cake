<div class="container">
  <div class="row mt-3 pl-5">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;">商品編集</span>
    </h4>
  </div>

      <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
        <div class="row mt-4">
          <div class="col-sm-2">
          </div>
          <label for="image" class="col-sm-2 col-form-label">商品画像</label>
          <div class="col-sm-4">
            <%= f.file_field :image, class:"form-control-file", id:"image", accept:"image/*" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-2">
          </div>
          <label for="name" class="col-sm-2 col-form-label">商品名</label>
          <div class="col-sm-4">
            <%= f.text_field :name, class:"form-control", id:"name" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-2">
          </div>
          <label for="introduction" class="col-sm-2 col-form-label">商品説明</label>
          <div class="col-sm-4">
            <%= f.text_area :introduction, class:"form-control", id:"introduction" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-2">
          </div>
          <label for="genre" class="col-sm-2 col-form-label">ジャンル</label>
          <div class="col-sm-4 col-form-label">
            <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択してください" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-2">
          </div>
          <label for="price" class="col-sm-2 col-form-label">税抜価格</label>
          <div class="col-sm-4">
            <%= f.text_field :price, class:"form-control", id:"price" %>
          </div>
        </div>

        <div class="row mt-3">
          <div class="col-sm-2">
          </div>
          <label for="is_active" class="col-sm-2 col-form-label">販売ステータス</label>
          <div class="col-sm-2 col-form-label">
            <%= f.radio_button :is_active, "true" %> 販売中
          </div>
          <div class="col-sm-2 col-form-label">
            <%= f.radio_button :is_active, "false" %> 販売停止中
          </div>
        </div>

        <div class="row mt-4">
          <div class="col-sm-4">
          </div>
          <div class="col-sm-3">
            <%= f.submit "変更を保存", class:"btn btn-success" %>
          </div>
        </div>
      <% end %>
</div>