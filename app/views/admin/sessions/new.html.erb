<div class="container">
  <div class="row pl-3 my-3">
    <h4>
      <span class="border px-4 mt-4" style="background-color: #f5f5f5;">管理者ログイン</span>
    </h4>
  </div>

<%= form_with model: @admin, url: admin_session_path do |f| %>
  <div class="row mb-3 d-flex justify-content-center">
    <label for="admin_email" class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-6">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"admin_email" %>
    </div>
  </div>

  <div class="row mb-4 d-flex justify-content-center">
    <label for="admin_password" class="col-sm-2 col-form-label">パスワード</label>
    <div class="col-sm-6">
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"admin_password" %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-2">
    <%= f.submit "ログイン", class:"btn btn-primary form-control" %>
    </div>
  </div>
<% end %>

<%= render "admin/shared/links" %>
