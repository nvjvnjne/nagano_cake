<div class="container">
  <div class="row mt-4 pl-3">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5">ジャンル一覧・追加</span>
    </h4>
  </div>

  <%= form_with model: Genre.new, url: admin_genres_path, method: :post do |f| %>
  <div class="row mt-5">
    <label for="name" class="col-sm-2 col-form-label"><strong>ジャンル名</strong></label>
    <div class="col-sm-3">
      <%= f.text_field :name, class:"form-control", placeholder:"ジャンル名", id:"name" %>
    </div>
    <div class="col-sm-2">
      <%= f.submit "新規登録", class:"form-control btn btn-success ml-4" %>
    </div>
  </div>
  <% end %>

  <div class="row mt-4">
    <div class="col-sm-5">
      <table class="table">
        <thead>
          <tr class="table-active">
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td></td>
              <td></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success ml-5" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>