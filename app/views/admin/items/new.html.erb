<div class="container">
  <div class="row mt-4">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;">商品新規登録</span>
    </h4>
  </div>

  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <div class="row mt-3">
    <label for="image" class="col-sm-2 col-form-label">商品画像</label>
    <div class="col-sm-5">
      <%= f.file_field :image, class:"form-control-file", placeholder:"ファイルを選択", id:"image", accept:"image/*" %>
    </div>
  </div>

  <div class="row mt-3">
    <label for="name" class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-5">
      <%= f.text_field :name, class:"form-control", placeholder:"商品名", id:"name" %>
    </div>
  </div>

  <div class="row mt-3">
    <label for="introduction" class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-sm-5">
      <%= f.text_area :introduction, class:"form-control", placeholder:"ここに説明文を記述します", id:"introduction" %>
    </div>
  </div>

  <div class="row mt-3">
    <label for="price" class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-5">
      <%= f.text_field :price, class:"form-control", placeholder:"1000", id:"price" %>
    </div>
    <label class="col-1 col-form-label">円</label>
  </div>

  <div class="row mt-2">
    <label for="is_active" class="col-sm-2 col-form-label">販売ステータス</label>
    <div class="col-sm-2">
      <%= f.label :is_active, "販売中", class:"col-form-label" %>
      <%= f.radio_button :is_active, 'true' %>
    </div>
    <div class="col-sm-2">
      <%= f.label :is_active, "販売停止中", class:"col-form-label" %>
      <%= f.radio_button :is_active, 'false' %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-4">
      <%= f.submit "新規登録", class:"btn btn-lg btn-success" %>
    </div>
  </div>
  <% end %>
</div>