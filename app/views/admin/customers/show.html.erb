<div class="container">
  <div class="row mt-4 pl-3">
    <h4>
      <span class="border px-3" style="background-color: #f5f5f5;"><%= @customer.full_name %>さんの会員詳細</span>
    </h4>
  </div>

  <div class="row mt-4">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <th><%= @customer.id %></th>
        </tr>
        <tr>
          <th>氏名</th>
          <th><%= @customer.last_name %>  <%= @customer.first_name %></th>
        </tr>
        <tr>
          <th>フリガナ</th>
          <th><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></th>
        </tr>
        <tr>
          <th>郵便番号</th>
          <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
          <th>住所</th>
          <th><%= @customer.address %></th>
        </tr>
        <tr>
          <th>電話番号</th>
          <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <th><%= @customer.email %></th>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <th>
            <% if @customer.is_deleted %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-secondary">無効</p>
            <% end %>
          </th>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row mt-2">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-3">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class:"btn btn-success" %>
    </div>
  </div>
</div>